<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >
	
	<ScrollView android:layout_width="fill_parent"
	    android:background="@drawable/textured_background_light"
	    android:layout_height="0dp"
	    android:layout_alignParentTop="true"
	    android:layout_above="@+id/bottom_nav"
	    android:layout_marginBottom="10dip"
	    android:minHeight="4000dip" >
	    
		<LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:padding="10dip" >
		    
		    <LinearLayout android:id="@+id/details_view"
		        android:orientation="vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/rounded_bg_white"
		        android:layout_marginBottom="15dip"
		        android:padding="10dip">
		        
		        <!-- Beer style view -->
		        <LinearLayout android:id="@+id/beer_type_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@+id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@+id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="content" />
		        </LinearLayout>
		        
		        <!-- Beer Gravity View -->
		        <LinearLayout android:id="@+id/beer_gravity_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@+id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@+id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:gravity="right"
		        	    android:layout_marginRight="15dp"
		        	    android:text="content" />
		        	
		        	<View android:layout_height="fill_parent"
		        	    android:layout_width="1dp"
		        	    android:background="#AAAAAA"
		        	    android:layout_marginRight="15dp" />
		        	
		        	<TextView android:id="@+id/gravity_range"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="@string/error" />
		        	
		        </LinearLayout>
		        
		        <!-- Bitterness view -->
		        <LinearLayout android:id="@+id/beer_bitterness_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@+id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@+id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:gravity="right"
		        	    android:layout_marginRight="15dp"
		        	    android:text="content" />
		        	
		        	<View android:layout_height="fill_parent"
		        	    android:layout_width="1dp"
		        	    android:background="#AAAAAA"
		        	    android:layout_marginRight="15dp" />
		        	
		        	<TextView android:id="@+id/bitterness_range"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="@string/error" />
		        	
		        </LinearLayout>
		        
		        <!-- Color view -->
		        <LinearLayout android:id="@+id/beer_color_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:gravity="right"
		        	    android:layout_marginRight="15dp"
		        	    android:text="content" />
		        	
		        	<View android:layout_height="fill_parent"
		        	    android:layout_width="1dp"
		        	    android:background="#AAAAAA"
		        	    android:layout_marginRight="15dp" />
		        	
		        	<TextView android:id="@+id/color_range"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="@string/error" />
		        	
		        </LinearLayout>
		        
		        <!-- ABV view -->
		        <LinearLayout android:id="@+id/beer_abv_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:gravity="right"
		        	    android:layout_marginRight="15dp"
		        	    android:text="content" />
		        	
		        	<View android:layout_height="fill_parent"
		        	    android:layout_width="1dp"
		        	    android:background="#AAAAAA"
		        	    android:layout_marginRight="15dp" />
		        	
		        	<TextView android:id="@+id/ABV_range"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="@string/error" />
		        </LinearLayout>	
		        	        
		        <!-- Boil time view -->
		        <LinearLayout android:id="@+id/boil_time_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#DCDCDC"
			        android:layout_marginBottom="5dip"
			        android:padding="10dip" >
			        
		        	<TextView android:id="@id/tag"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:text="tag: " />
		        	
		        	<TextView android:id="@id/content"
		        	    android:layout_width="0dip"
		        	    android:layout_weight="1"
		        	    android:background="#00000000"
		        	    android:layout_height="fill_parent"
		        	    android:gravity="right"
		        	    android:layout_marginRight="15dp"
		        	    android:text="content" />
		        	
		        	<View android:layout_height="fill_parent"
		        	    android:layout_width="0dp"
		        	    android:layout_weight="1"
		        	    android:background="@color/transparent"
		        	    android:layout_marginRight="15dp" />
		    
		        </LinearLayout>
		         
		    </LinearLayout>
		    
		    <TextView android:id="@+id/description_view"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/rounded_bg_white"
		        android:padding="10dip" />
		    
		</LinearLayout>  
	</ScrollView>
	
	<LinearLayout android:id="@+id/bottom_nav"
	   android:layout_height="70dip"
	   android:gravity="center"
	   android:layout_alignParentBottom="true"
	   android:background="@drawable/actionbar_background"
	   android:layout_width="fill_parent" >
	    
	     
	</LinearLayout>
</RelativeLayout>
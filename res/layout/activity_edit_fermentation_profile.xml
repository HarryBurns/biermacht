<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

	<!-- Colored bar at top -->
	<TextView android:id="@+id/colored_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:textColor="#fff"
		android:background="@color/theme_orange"
		android:layout_alignParentTop="true"
		android:text="">
		<requestFocus />
	</TextView>

	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/activity_background"
   		android:layout_below="@id/colored_bar">

		<LinearLayout android:id="@+id/main_layout"
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:layout_margin="0dip"
			android:background="@color/transparent"
			android:orientation="vertical" >
			
			<LinearLayout android:id="@+id/num_stages_layout"
					android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="15dp"
					android:background="@color/transparent" >

			   <TextView android:id="@+id/num_stages_title"
					android:text="Fermentation Stages: "
					android:layout_gravity="center_vertical"
					android:layout_width="wrap_content"
					style="@style/title_light" />
	
				<Spinner
					android:id="@+id/num_stages_spinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:drawSelectorOnTop="false"
					android:padding="15dip"
					android:background="@drawable/rounded_bg_white"
					android:spinnerMode="dialog"
					android:layout_marginLeft="15dip" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout android:id="@+id/bottom_nav"
        android:layout_height="60dip"
        android:background="@color/activity_background"
        android:layout_width="fill_parent" 
        android:padding="10dp"
        android:layout_alignParentBottom="true">

        <!-- Cancel Button -->
	    <Button
	        android:id="@+id/cancel_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:textColor="@drawable/button_text"
	        android:onClick="onClick"
	        android:background="@drawable/left_button_bg"
	        android:text="@string/cancel" />

	    <!-- Submit Button -->
	    <Button
	        android:id="@+id/submit_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:textColor="@drawable/button_text"
	        android:onClick="onClick"
	        android:background="@drawable/right_button_bg"
	        android:text="@string/edit" />

    </LinearLayout>

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:background="#CCCCCC"
    android:orientation="vertical" >
        
    <!-- Grain Type spinner -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Grain Type" />
    
    <Spinner
        android:id="@+id/grain_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:drawSelectorOnTop="false"
        android:padding="10dip"
        android:background="#FFFFFF"
        android:spinnerMode="dialog"
        android:layout_marginBottom="15dip"
        android:paddingLeft="10dip" />
    
    <!-- EditText for Grain Name -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Name" />
    
    <EditText
        android:id="@+id/grain_name_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip"
        android:hint="Enter a name" />
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000" >
	    
	    <TextView android:id="@+id/details_title_view"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:layout_marginBottom="3dip"
	        android:gravity="center"
	        android:textSize="15dip"
	        android:textStyle="bold"
	        android:text="Color" />
		    
	    <TextView android:id="@+id/details_title_view"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:layout_marginBottom="3dip"
	        android:gravity="center"
	        android:textSize="15dip"
	        android:textStyle="bold"
	        android:text="Gravity" />
	    
	    <!-- EditText for Grain Weight -->
	    <TextView android:id="@+id/details_title_view"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:layout_marginBottom="3dip"
	        android:gravity="center"
	        android:textSize="15dip"
	        android:textStyle="bold"
	        android:text="Weight (lbs)" />
	              
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000" >
	    
	    <EditText
	        android:id="@+id/grain_color_edit_text"
	        android:layout_width="0dp"
	        android:layout_height="60dip"
	        android:layout_weight="1"
	        android:background="#FFFFFF"
	        android:padding="10dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="15dip" />
	    
	    <EditText
	        android:id="@+id/grain_grav_edit_text"
	        android:layout_width="0dp"
	        android:layout_height="60dip"
	        android:layout_weight="1"
	        android:background="#FFFFFF"
	        android:padding="10dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="15dip" />
	    
	    <EditText
	        android:id="@+id/grain_weight_edit_text"
	        android:layout_width="0dp"
	        android:layout_height="60dip"
	        android:layout_weight="1"
	        android:background="#FFFFFF"
	        android:padding="10dip"
	        android:layout_marginBottom="15dip" />
	    
		            
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000" >
	    
	    <!-- Delete Button -->
	    <Button
	        android:id="@+id/new_grain_delete_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="70dip"
	        android:onClick="onClick"
	        android:text="Delete" />
	    
	    <!-- Submit Button -->
	    <Button
	        android:id="@+id/new_grain_submit_button"
	   	    android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="70dip"
	        android:onClick="onClick"
	        android:text="Submit" />
	    
	</LinearLayout>
    

</LinearLayout>

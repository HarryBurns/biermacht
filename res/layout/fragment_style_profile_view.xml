<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/activity_background"
              android:orientation="vertical">

    <!-- Divider below pager title -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/theme_blue"
        android:textColor="@color/transparent">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Aroma"
                android:layout_marginBottom="16dp"
                android:textColor="@color/title_color"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/aroma_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Notes go here and they can be quite long so I'm simulating that with this."
                android:textColor="@color/text"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Appearance"
                android:layout_margin="16dp"
                android:textColor="@color/title_color"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/appearance_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Notes go here and they can be quite long so I'm simulating that with this."
                android:textColor="@color/text"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Flavor"
                android:layout_margin="16dp"
                android:textColor="@color/title_color"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/flavor_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Notes go here and they can be quite long so I'm simulating that with this."
                android:textColor="@color/text"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mouthfeel"
                android:layout_margin="16dp"
                android:textColor="@color/title_color"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/mouthfeel_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Notes go here and they can be quite long so I'm simulating that with this."
                android:textColor="@color/text"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

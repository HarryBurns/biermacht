<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
	<LinearLayout android:orientation="vertical"
	    android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    android:background="#00000000"
	    android:minHeight="4000dip"
	    android:layout_weight="10" >
		    
	    <ListView
	        android:id="@+id/ingredient_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:drawSelectorOnTop="false"
	        android:visibility="gone" >
	    </ListView>
	    
	    <TextView android:id="@+id/no_ingredients_view"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip" 
	        android:background="#FFFFFF" 
	        android:gravity="center"
	        android:visibility="gone"
	        android:text="No ingredients found" />
	    
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#44000000" />
	        
    <LinearLayout android:id="@+id/ingredient_bottom_nav"
        android:layout_height="70dip"
        android:gravity="center"
        android:layout_width="fill_parent" >
	    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add: " />
        
	    <ImageView android:id="@+id/add_grain"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:padding="10dip"
	        android:onClick="grainClick"
	        android:src="@drawable/icon_wheat"
	        android:contentDescription="icon" />
	    
	    <ImageView android:id="@+id/add_hops"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:padding="10dip"
	        android:src="@drawable/icon_hops"
	        android:contentDescription="icon" />
	    
	    <ImageView android:id="@+id/add_other"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:padding="10dip"
	        android:src="@drawable/icon_idk"
	        android:contentDescription="icon" />
       
    </LinearLayout>
</LinearLayout>
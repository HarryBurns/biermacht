<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical" >
    
	<LinearLayout android:orientation="vertical"
	    android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    android:background="@color/transparent"
	    android:minHeight="4000dip"
	    android:padding="0dip"
	    android:layout_weight="10" >
			
			    <ListView
			        android:id="@+id/instruction_list"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:drawSelectorOnTop="true"
			        android:listSelector="@drawable/selector"
			        android:background="#fff"
			        android:visibility="gone" >
			    </ListView>
			    
			    <TextView android:id="@+id/no_instructions_view"
			        android:layout_width="fill_parent"
			        android:layout_height="72dip" 
			        android:background="#FFFFFF" 
			        android:gravity="center"
					android:layout_margin="10dip"
			        android:visibility="gone"
			        android:text="No instructions found" /> 
				
				<View android:layout_width="fill_parent"
					android:layout_height="1dip"
					android:background="@color/divider" />
	        
    </LinearLayout>
    
	<LinearLayout android:id="@+id/timer_view"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="120dip"
		android:layout_gravity="center"
		android:visibility="gone"
		android:background="@color/activity_background">
				
   		<View android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="@color/divider" />
				
	    <TextView android:id="@+id/timer"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:textSize="40dip"
	        android:text="00:59:30" />
				
	    <LinearLayout android:id="@+id/timer_controls"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="60dip"
			android:layout_gravity="center" >
				
		    <!-- Prev Button -->
		    <Button
		        android:id="@+id/cancel_button"
		        android:onClick="onClick"
		        android:text="Prev"
				style="@style/button" />
		    
		    <!-- Pause/Play Button -->
		    <Button
		        android:id="@+id/delete_button"
		        android:onClick="onClick"
		        android:text="||"
		        style="@style/button" />
		
		    <!-- Next Button -->
		    <Button
		        android:id="@+id/submit_button"
		        android:onClick="onClick"
		        android:text="Next"
		        style="@style/button" />
		    
		</LinearLayout>
    </LinearLayout>
</LinearLayout>

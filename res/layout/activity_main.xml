<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <LinearLayout android:id="@+id/recipe_search_view"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:padding="2dip"
        android:background="#66000000" >
        
        <EditText android:id="@+id/search_bar"
            android:layout_width="0dip" 
            android:layout_weight="1" 
            android:layout_height="fill_parent" 
            android:padding="10dip"
            android:background="#EEEEEE"
            android:hint="Search for a recipe" />
        
        <View android:layout_width="2dip"
            android:layout_height="fill_parent" 
            android:background="#00000000" />
        
        <ImageView android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:focusable="false"
            android:background="#EEEEEE"
            android:src="@drawable/search_icon" />"
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="true"
        android:listSelector="#22000000" >
    </ListView>

</LinearLayout>


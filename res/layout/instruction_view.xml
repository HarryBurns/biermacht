<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    android:background="#00000000"
	    android:minHeight="4000dip"
	    android:layout_weight="10" >
	
	    <ListView
	        android:id="@+id/instruction_list"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="10"
	        android:drawSelectorOnTop="true"
	        android:listSelector="#2200FF00" >
	    </ListView>
	    
	    <TextView android:id="@+id/no_instructions_view"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip" 
	        android:background="#FFFFFF" 
	        android:gravity="center"
	        android:visibility="invisible"
	        android:text="No instructions found" /> 
    </LinearLayout>
    
	
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#44000000" />
	        
    <LinearLayout android:id="@+id/instruction_player"
        android:layout_height="70dip"
        android:gravity="bottom"
        android:layout_width="fill_parent" >
        
        <View android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1" />
        
        <TextView android:id="@+id/time_left"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:padding="5dip"
            android:gravity="center"
            android:textSize="20dip"
            android:text="30:00" />
        
        <View android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1" />     
    </LinearLayout>

</LinearLayout>
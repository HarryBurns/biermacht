<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical" >
    
	<LinearLayout android:orientation="vertical"
	    android:layout_height="0dip"
	    android:layout_width="fill_parent"
	    android:background="#00000000"
	    android:minHeight="4000dip"
	    android:padding="10dip"
	    android:layout_weight="10" >
	
	    <ListView
	        android:id="@+id/instruction_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:drawSelectorOnTop="true"
	        android:listSelector="@drawable/selector"
	        android:visibility="gone" >
	    </ListView>
	    
	    <TextView android:id="@+id/no_instructions_view"
	        android:layout_width="fill_parent"
	        android:layout_height="72dip" 
	        android:background="#FFFFFF" 
	        android:gravity="center"
	        android:visibility="gone"
	        android:text="No instructions found" /> 
	        
    </LinearLayout>
	
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#44000000" />
	        
     <LinearLayout android:id="@+id/ingredient_bottom_nav"
        android:layout_height="70dip"
        android:gravity="center"
        android:background="@drawable/actionbar_background"
        android:layout_width="fill_parent" >
        
	    <ImageView android:id="@+id/timer"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:onClick="grainClick"
	        android:src="@drawable/icon_clock" />
       
    </LinearLayout>

</LinearLayout>
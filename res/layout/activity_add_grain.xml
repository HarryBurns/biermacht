<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical" >
        
    <RelativeLayout android:layout_width="match_parent"
    	android:layout_height="match_parent"
   		android:padding="10dip"
   		android:layout_margin="10dip"
   		android:layout_above="@+id/bottom_nav"
   		android:layout_alignParentTop="true"
   		android:background="#DDDDDD" >
   		
	    <!-- Grain Type spinner -->
	    <TextView android:id="@+id/spinner_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:layout_marginBottom="3dip"
	        android:gravity="left"
	        android:textSize="15dip"
	        android:textStyle="bold"
	        android:text="@string/grain_type"
	        android:layout_alignParentTop="true" />
	    
	    <Spinner
	        android:id="@+id/grain_type_spinner"
	        android:layout_width="fill_parent"
	        android:layout_height="60dip"
	        android:drawSelectorOnTop="false"
	        android:padding="10dip"
	        android:background="#FFFFFF"
	        android:spinnerMode="dialog"
	        android:layout_marginBottom="15dip"
	        android:paddingLeft="10dip"
	        android:layout_below="@id/spinner_title" />
	    
	    <!-- EditText for Grain Name -->
	    <TextView android:id="@+id/grain_name_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:layout_marginBottom="3dip"
	        android:gravity="left"
	        android:textSize="15dip"
	        android:textStyle="bold"
	        android:text="@string/name"
	        android:layout_below="@id/grain_type_spinner" />
	    
	    <EditText
	        android:id="@+id/grain_name_edit_text"
	        android:layout_width="fill_parent"
	        android:layout_height="60dip"
	        android:background="#FFFFFF"
	        android:padding="10dip"
	        android:layout_marginBottom="15dip"
	        android:hint="@string/enter_name"
	        android:layout_below="@id/grain_name_title" />
	    
	    <LinearLayout android:id="@+id/first_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:layout_below="@id/grain_name_edit_text" >
		    
		    <TextView android:id="@+id/color_title"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="#00000000"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:text="@string/color" />
			    
		    <TextView android:id="@+id/gravity_title"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="#00000000"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:text="@string/gravity" />
		    
		    <!-- EditText for Grain Weight -->
		    <TextView android:id="@+id/weight_title"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="#00000000"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:text="@string/weight_lbs" />
		              
	    </LinearLayout>
	    
	    <LinearLayout android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:layout_below="@id/first_ll" >
		    
		    <EditText
		        android:id="@+id/grain_color_edit_text"
		        android:inputType="numberDecimal"
		        android:layout_width="0dp"
		        android:layout_height="60dip"
		        android:layout_weight="1"
		        android:background="#FFFFFF"
		        android:padding="10dip"
		        android:layout_marginRight="2dip"
		        android:layout_marginBottom="15dip" />
		    
		    <EditText
		        android:id="@+id/grain_grav_edit_text"
		        android:inputType="numberDecimal"
		        android:layout_width="0dp"
		        android:layout_height="60dip"
		        android:layout_weight="1"
		        android:background="#FFFFFF"
		        android:padding="10dip"
		        android:layout_marginRight="2dip"
		        android:layout_marginBottom="15dip" />
		    
		    <EditText
		        android:id="@+id/grain_weight_edit_text"
		        android:inputType="numberDecimal"
		        android:layout_width="0dp"
		        android:layout_height="60dip"
		        android:layout_weight="1"
		        android:background="#FFFFFF"
		        android:padding="10dip"
		        android:layout_marginBottom="15dip" />
			            
	    </LinearLayout>
	</RelativeLayout>
	
      <!-- Bottom Bar -->
    <LinearLayout android:id="@+id/bottom_nav"
        android:layout_height="70dip"
        android:background="@drawable/actionbar_background"
        android:layout_width="fill_parent" 
        android:padding="15dp"
        android:layout_alignParentBottom="true">
	    
        <!-- Cancel Button -->
	    <Button
	        android:id="@+id/cancel_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:onClick="onClick"
	        android:background="@drawable/left_add_button_drawable"
	        android:text="@string/cancel" />
	
	    <!-- Submit Button -->
	    <Button
	        android:id="@+id/new_grain_submit_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:onClick="onClick"
	        android:background="@drawable/right_add_button_drawable"
	        android:text="@string/add" />

    </LinearLayout>

</RelativeLayout>

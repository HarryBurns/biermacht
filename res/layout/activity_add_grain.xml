<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:orientation="vertical" >
        
    <!-- Grain Type spinner -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Grain Type" />
    
    <Spinner
        android:id="@+id/grain_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:drawSelectorOnTop="false"
        android:padding="10dip"
        android:background="#FFFFFF"
        android:spinnerMode="dialog"
        android:layout_marginBottom="15dip"
        android:paddingLeft="10dip" />
    
    <!-- EditText for Grain Name -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Name" />
    
    <EditText
        android:id="@+id/grain_name_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip"
        android:hint="Enter a name" />
    
    <!-- EditText for Grain Color -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Color, Lovibond" />
    
    <EditText
        android:id="@+id/grain_color_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip" />
   
    <!-- EditText for Grain Grav -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Specific Gravity" />
    
    <EditText
        android:id="@+id/grain_grav_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip" />
    
    <!-- EditText for Grain Weight -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Amount" />
    
    <EditText
        android:id="@+id/grain_weight_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/new_grain_submit_button"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:onClick="onClick"
        android:text="Add" />

</LinearLayout>

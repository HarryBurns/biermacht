<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/activity_background"
              android:orientation="vertical">

    <!-- Divider below pager title -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/theme_blue"
        android:textColor="@color/transparent">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background">

        <LinearLayout
            android:id="@+id/profile_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip">

            <LinearLayout
                android:id="@+id/mash_profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:background="@drawable/rounded_bg_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mash_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_title_bg"
                    android:gravity="center"
                    android:text="@string/mash_profile"
                    android:textColor="@color/title_color"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fermentation_profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:background="@drawable/rounded_bg_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fermentation_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_title_bg"
                    android:gravity="center"
                    android:text="@string/fermentation_profile"
                    android:textColor="@color/title_color"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/style_profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:background="@drawable/rounded_bg_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_title_bg"
                    android:gravity="center"
                    android:text="@string/style_profile"
                    android:textColor="@color/title_color"/>

                <TextView
                    android:id="@+id/style_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="Other"
                    android:textColor="@color/text"/>

                <Button
                    android:id="@+id/display_style_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    style="@style/button"
                    android:onClick="displayStyle"
                    android:text="Details"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

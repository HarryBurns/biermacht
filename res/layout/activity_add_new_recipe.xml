<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >
	
	<!-- Colored bar at top -->
	<TextView android:id="@+id/colored_bar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:paddingTop="4dp"
		android:paddingBottom="4dp"
		android:textColor="#fff"
		android:background="@color/theme_orange"
		android:layout_alignParentTop="true"
		android:text="">
		<requestFocus />
	</TextView>
       
	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/activity_background"
   		android:layout_above="@+id/bottom_nav"
   		android:layout_below="@id/colored_bar">
		
    <RelativeLayout android:layout_width="match_parent"
    	android:layout_height="match_parent"
   		android:padding="10dip"
   		android:background="@color/transparent" >
    
	    <TextView android:id="@+id/recipe_name_title"
	        android:layout_alignParentTop="true"
	        android:text="Recipe Name"
	        style="@style/title_light" />
	    
	    <EditText
	        android:id="@+id/recipe_name_edit_text"
	        android:layout_width="fill_parent"
	        android:layout_height="40dip"
	        android:background="@drawable/rounded_bg_white"
	        android:paddingLeft="10dip"
	        android:layout_marginBottom="15dip"
	        android:layout_below="@id/recipe_name_title"
	        android:hint="Enter a recipe name"
	        android:selectAllOnFocus="true" />

	    
	    <LinearLayout android:id="@+id/spinner_titles"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:layout_below="@id/recipe_name_edit_text" >

		    <!-- BeerType spinner -->
		    <TextView android:id="@+id/beer_style_title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:layout_marginBottom="3dip"
		        android:gravity="left"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:textColor="@color/title_color"
		        android:text="Beer Style" />
		              
	    </LinearLayout>
	    
	    <LinearLayout android:id="@+id/spinners"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:background="@color/transparent"
	        android:layout_below="@id/spinner_titles" >
	        
		   <Spinner
		        android:id="@+id/beer_type_spinner"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="false"
		        android:padding="10dip"
		        android:background="@drawable/rounded_bg_white"
		        android:spinnerMode="dialog"
		        android:paddingLeft="10dip" />
		   
		  <Spinner
		        android:id="@+id/brew_type_spinner"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="false"
		        android:padding="10dip"
		        android:background="@drawable/rounded_bg_white"
		        android:spinnerMode="dialog"
		        android:paddingLeft="10dip" />
			            
	    </LinearLayout>
		
	    <LinearLayout android:id="@+id/first_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:layout_below="@id/spinners" >
		    
		    <!-- Boil time -->
		    <TextView android:id="@+id/boil_length_title"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@color/transparent"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:textColor="@color/title_color"
		        android:text="@string/boil_time" />
		    
		    <!-- Efficiency -->
		    <TextView android:id="@+id/efficiency_title"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@color/transparent"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:textColor="@color/title_color"
		        android:text="@string/efficiency" />
		              
	    </LinearLayout>
	    
	    <LinearLayout android:id="@+id/second_ll"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:background="@color/transparent"
	        android:layout_below="@id/first_ll" >
	        	    
		    <EditText
		        android:id="@+id/boil_time_edit_text"
		        android:inputType="number"
		        android:selectAllOnFocus="true"
		        android:maxLength="3"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="40dip"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/rounded_bg_white"
		        android:padding="10dip"
		        android:hint="@string/minutes_hint" />
		    
		    <EditText
		        android:id="@+id/efficiency_edit_text"
		        android:inputType="numberDecimal"
		        android:selectAllOnFocus="true"
		        android:maxLength="4"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="40dip"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/rounded_bg_white"
		        android:padding="10dip"
		        android:hint="@string/efficiency_hint" />
			            
	    </LinearLayout>
	    
	   	<LinearLayout android:id="@+id/third_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:layout_below="@id/second_ll" >
		
	        <!-- Batch Vol -->
		    <TextView android:id="@+id/batch_volume_title"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:textColor="@color/title_color"
		        android:text="@string/batch_volume" />
		    		    
	        <!-- Boil Vol -->
		    <TextView android:id="@+id/boil_volume_title"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@color/transparent"
		        android:layout_marginBottom="3dip"
		        android:gravity="center"
		        android:textSize="15dip"
		        android:textStyle="bold"
		        android:textColor="@color/title_color"
		        android:text="@string/boil_volume" />
		              
	    </LinearLayout>
	    
	    <LinearLayout android:id="@+id/forth_ll"
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:background="@color/transparent"
	        android:layout_below="@id/third_ll" >
		    
	        <EditText
		        android:id="@+id/batch_volume_edit_text"
		        android:inputType="numberDecimal"
		        android:selectAllOnFocus="true"
		        android:maxLength="4"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="40dip"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/rounded_bg_white"
		        android:padding="10dip"
		        android:hint="@string/volume_gal_hint" />
		    
		  	<EditText
		        android:id="@+id/boil_volume_edit_text"
		        android:inputType="numberDecimal"
		        android:selectAllOnFocus="true"
		        android:maxLength="4"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="40dip"
		        android:background="@drawable/rounded_bg_white"
		        android:padding="10dip"
		        android:hint="@string/volume_gal_hint" />
			            
	    </LinearLayout>

	</RelativeLayout>
	</ScrollView>
	
    <!-- Bottom Bar -->
    <LinearLayout android:id="@+id/bottom_nav"
        android:layout_height="60dip"
        android:background="@color/activity_background"
        android:layout_width="fill_parent" 
        android:padding="10dp"
        android:layout_alignParentBottom="true">
	    
        <!-- Cancel Button -->
	    <Button
	        android:id="@+id/cancel_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:textColor="@drawable/button_text"
	        android:onClick="onClick"
	        android:background="@drawable/left_button_bg"
	        android:text="@string/cancel" />
	
	    <!-- Submit Button -->
	    <Button
	        android:id="@+id/new_recipe_submit_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:textColor="@drawable/button_text"
	        android:onClick="onClick"
	        android:background="@drawable/right_button_bg"
	        android:text="Create" />

    </LinearLayout>

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:orientation="vertical" >
        
    <!-- EditText for Beer Name -->

    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Recipe Name" />
    
    <EditText
        android:id="@+id/recipe_name_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip"
        android:hint="Enter a recipe name" />

    <!-- BeerType spinner -->
    
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Beer Style" />
    
    <Spinner
        android:id="@+id/beer_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:drawSelectorOnTop="false"
        android:padding="10dip"
        android:background="#FFFFFF"
        android:layout_marginBottom="15dip"
        android:paddingLeft="10dip" />

    <!-- EditText for Description -->
    <TextView android:id="@+id/details_title_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginBottom="3dip"
        android:gravity="left"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="Description" />
    
    <EditText
        android:id="@+id/recipe_description_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="10dip"
        android:layout_marginBottom="15dip"
        android:hint="Enter a description (optional)" />
    

    <!-- Submit Button -->
    <Button
        android:id="@+id/new_recipe_submit_button"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:text="Create new recipe" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">

    <!-- Colored bar at top -->
    <TextView
        android:id="@+id/colored_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="#fff"
        android:background="@color/theme_main"
        android:layout_alignParentTop="true"
        android:text="">

        <requestFocus/>
    </TextView>
	
	<!-- Splits the screen in two -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/colored_bar"
		android:background="@color/white"
		android:orientation="horizontal">

		<!-- LinearLayout which contains the recipe list. -->
    	<LinearLayout
    	    android:id="@+id/first_ll"
	        android:layout_width="0dip"
        	android:layout_height="fill_parent"
			    android:layout_weight="2"
	        android:padding="0dip"
        	android:background="@color/transparent"
    	    android:orientation="vertical"
	        android:layout_alignParentTop="true">

    	    <ListView
	            android:id="@+id/recipe_list"
            	android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
    	        android:background="@color/white"
	            android:padding="0dip"
            	android:dividerHeight="0dp"
        	    android:drawSelectorOnTop="true"
              android:choiceMode="singleChoice"
    	        android:listSelector="@drawable/selector" >
	        </ListView>

    	    <TextView
	            android:id="@+id/no_recipes_view"
            	android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
    	        android:background="#FFFFFF"
	            android:gravity="center"
            	android:visibility="gone"
        	    android:textColor="@color/title_color"
    	        android:textSize="15sp"
	            android:text="@string/no_recipes"/>

    	    <!-- Bottom border for listView -->
	        <TextView
        	    android:id="@+id/list_view_border"
    	        android:layout_width="fill_parent"
	            android:layout_height="1dp"
            	android:layout_gravity="top"
        	    android:textColor="#fff"
    	        android:background="@color/divider"
	            android:text="">

            	<requestFocus/>
        	</TextView>
    	</LinearLayout>
		
		<!-- Divider bar between recipe list and details -->
		<TextView
			android:layout_width="2dip"
			android:layout_height="fill_parent"
			android:layout_gravity="top"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:paddingTop="0dip"
			android:paddingBottom="0dip"
			android:textColor="#fff"
			android:background="@color/divider"
			android:text="">
		</TextView>
	
		<!-- Contains details on the selected recipe. -->
	    <LinearLayout
			android:id="@+id/details_view"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="3"
			android:padding="0dip"
			android:background="@color/transparent"
			android:orientation="vertical"
			android:layout_alignParentTop="true">
			
			<android.support.v4.view.ViewPager
				android:id="@+id/pager"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<android.support.v4.view.PagerTitleStrip
					android:id="@+id/pager_title_strip"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/transparent"
					android:textColor="@color/title_color"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"/>

			</android.support.v4.view.ViewPager>
			
		</LinearLayout>
			
	
	</LinearLayout>
  </RelativeLayout>

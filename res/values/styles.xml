<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Biermacht.Brews" parent="android:Theme.Holo.Light">
        <item name="android:background">#00DEDEDE</item>
        <item name="android:actionBarStyle">@style/Theme.Biermacht.Brews.ActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/Theme.Biermacht.Brews.ActionBarTabBarStyle</item>
    </style>
    
    <style name="Theme.Biermacht.Brews.ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/Theme.Biermacht.Brews.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Theme.Biermacht.Brews.ActionBarTabBarStyle">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Theme.Biermacht.Brews.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biermacht.brews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        uiOptions="splitActionBarWhenNarrow"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Biermacht.Brews" >
        <activity
            android:name=".frontend.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.DisplayRecipeActivity"
            android:label="@string/title_activity_display_recipe"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.biermacht.brews.MainActivity" />
        </activity>
        <activity
            android:name=".frontend.AddNewRecipeActivity"
            android:label="@string/title_activity_add_new_recipe"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".frontend.AddGrainActivity"
            android:label="@string/title_activity_add_grain"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".frontend.EditGrainActivity"
            android:label="@string/title_activity_edit_grain"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".frontend.EditRecipeActivity"
            android:label="@string/title_activity_edit_recipe"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".frontend.AddHopsActivity"
            android:label="@string/title_activity_add_hops"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".frontend.EditHopActivity"
            android:label="@string/title_activity_edit_hop"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize" >
        </activity>
    </application>

</manifest>